<% if @error %>
    notification('<%= @error %>', true, 'user', true)
    $('#under_slider').slider({
                value: <%= @consumer.auto_authorize_under %> 
                });
    $('#over_slider').slider({
                value: <%= @consumer.auto_deny_over %>
                });              
<% else %>
    notification('Rule succesfully updated', false, 'user', true)
<% end %>
$('#allowance_display').val('<%= number_to_currency @consumer.allowance %>');
$('#allowance_header').html('<%= number_to_currency @consumer.allowance %>');
$('#period_header').html('<%= (@consumer.allowance_period == 'Weekly') ?(t 'week') :(t 'month') %>');
$('#under_display').val('<%= number_to_currency @consumer.auto_authorize_under %>');
$('#over_display').val('<%= number_to_currency @consumer.auto_deny_over %>');
$('#allowance').val('<%= @consumer.allowance %>');
$('#under').val('<%= @consumer.auto_authorize_under %>');
$('#over').val('<%= @consumer.auto_deny_over %>');
$('#next-allowance-date').val('<%= l @consumer.next_allowance_date, :format => :slash %>');